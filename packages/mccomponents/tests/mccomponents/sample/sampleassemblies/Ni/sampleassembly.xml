<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly 
    name="Ni" 
    max_multiplescattering_loops_among_scatterers="5"
    max_multiplescattering_loops_interactM_path1="3"
    >
  
  <PowderSample name='Ni plate' type='sample'>
    <Shape>
      <union>
	<block width="6*cm" height="10*cm" thickness="0.1*cm" />
	<block width="6*cm" height="10*cm" thickness="0.1*cm" />
	<block width="6*cm" height="10*cm" thickness="0.1*cm" />
      </union>
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>Ni</ChemicalFormula>
      <xyzfile>Ni.xyz</xyzfile>
    </Phase>
  </PowderSample>
  
  <LocalGeometer registry-coordinate-system="InstrumentScientist">
    <Register name="Ni plate" position="(0,0,0)" orientation="(0,0,0)"/>
  </LocalGeometer>
<!--
  <environment>
    <temperature>300*K</temperature>
    <pressure>1.*atm</pressure>
  </environment>
-->

</SampleAssembly>
