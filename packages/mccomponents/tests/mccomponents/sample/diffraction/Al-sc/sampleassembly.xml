<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly name="Al-singlecrystal-SA"
   max_multiplescattering_loops_among_scatterers="1"
   max_multiplescattering_loops_interactM_path1="1"
   min_neutron_probability="1e-5"
 >
 <PowderSample name="Al-singlecrystal" type="sample">
   <Shape>
      <block width="6*cm" height="10*cm" thickness="1*cm" />
   </Shape>
   <Phase type="crystal">
     <ChemicalFormula>Al</ChemicalFormula>
     <xyzfile>Al.xyz</xyzfile>
   </Phase>
 </PowderSample>
 
 <LocalGeometer registry-coordinate-system="InstrumentScientist"> 
   <Register name="Al-singlecrystal" position="(0,0,0)" orientation="(0,0,0)"/> 
 </LocalGeometer>
 
 <Environment temperature="300*K"/>
 
</SampleAssembly>
